<div class="container">
  <% if flash.notice.present? %>
    <p><%= flash.notice %></p>
  <% end %>
  <div class="col-12 mt-5">
    <% if current_user.news_posting_auth %>
      <%= link_to "新規追加", new_article_path, class: "btn btn-primary my-3 me-3 float-end" %>
    <% end %>
    <table class="table table-striped">
      <thead class="p-2">
        <tr>
          <th class="p-3 fs-5" colspan="2"><p>タイトル</p></th>
        </tr>
      </thead>
      <tbody>
        <% @articles.each do |article|%>
          <tr class="col-12">
            <td class="col-10">
              <div class="d-flex align-items-center">
                <div class="col-8 ms-2">
                  <%= article.title %>
                </div>
                <div class="col-4">
                  <p>公開日  <%=l article.created_at, formats: :default %></p>
                </div>
              </div>
            </td>
            <% if current_user.news_posting_auth %>
              <% if current_user.id == article.author %>
                <td>
                  <div class="d-flex justify-content-around">
                    <button type="button" class="btn btn-secondary btn-sm">編集</button>
                    <%= link_to '削除', article_path(article), method: :delete, data: { confirm: "記事を削除します。よろしいですか？" }, class: 'btn btn-danger btn-sm' %>
                  </div>
                </td>
              <% end %>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
