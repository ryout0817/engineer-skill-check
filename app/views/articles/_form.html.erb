<div class="container">
  <div class="employee_form">
    <% if @article.errors.present? %>
      <ul>
        <% @article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div class="col-10 mx-auto mt-5">
    <h2 class="title article-title mb-0">お知らせ</h2>
    <div class="new-article-wrap p-5"> 
      <%= form_with model: @article, local: true do |f| %>
        <div class="row pb-4 mb-4">
          <div class="col-lg-2 px-0 me-0 text-center">
            <%= f.label :title, class:"form-label fw-bold" %>
          </div>
          <div class="col-lg-10 px-0">
            <%= f.text_field :title, class: "form-control w-100 py-3", placeholder: "タイトル" %>
          </div>
        </div>
        <div class="row align-items-center">
          <div class="col-lg-2 px-0 text-center">
            <%= f.label :content, class: "form-label fw-bold" %>
          </div>
          <div class="col-lg-10 px-0">
            <%= f.text_area :content, class: "form-control w-100", rows: 10 %>
          </div>
        </div>
        <div class="text-center">
          <%= button_tag(type: "submit", class: "btn btn-primary btn-lg ms-auto mt-5") do %>
            保存<i class="bi bi-file-earmark-plus-fill ms-1"></i>
          <% end %>
        </div>
        <%= f.hidden_field :author, value:@current_user.id %>
      <% end %>
    </div>
  </div>
</div>
