<div class="container">
  <div class="employee_form">
    <% if @article.errors.present? %>
      <ul>
        <% @article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div class="col-10">
    <div class="new-article-wrap p-5 m-5 border border-2 rounded"> 
      <%= form_with model: @article, local: true do |f| %>
        <div class="col-12 pb-2 d-flex align-items-center border-bottom border-2">
          <h1 class="fs-3 fw-bold">お知らせ</h1>
          <%= button_tag(type: "submit", class: "btn btn-primary ms-auto") do %>
            保存<i class="bi bi-file-earmark-plus-fill ms-1"></i>
          <% end %>
        </div>
        <div class="row pb-4 mt-5 mb-4">
          <div class="col-2 px-0 me-0">
            <%= f.label :title, class:"form-label fw-bold fs-6" %>
          </div>
          <div class="col-10 px-0">
            <%= f.text_field :title, class: "form-control w-100 py-3", placeholder: "タイトル" %>
          </div>
        </div>
        <div class="row">
          <div class="col-2 px-0">
            <%= f.label :content, class: "form-label fw-bold" %>
          </div>
          <div class="col-10 px-0">
            <%= f.text_area :content, class: "form-control w-100", rows: 10 %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
